<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order Sync Dashboard</title>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/list.js/2.3.1/list.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <style>
    :root {
      --primary: #0f172a;
      --primary-dark: #020617;
      --accent: #3b82f6;
      --text: #1e293b;
      --text-light: #64748b;
      --bg: #f8fafc;
      --card: #ffffff;
      --border: #e2e8f0;
      --hover: #f1f5f9;
      --success: #16a34a;
      --warning: #ea580c;
      --danger: #dc2626;
    }

    * {
      box-sizing: border-box;
    }

    body {
      font-family: 'Inter', system-ui, -apple-system, sans-serif;
      background: var(--bg);
      margin: 0;
      color: var(--text);
      line-height: 1.4;
    }

    .container {
      max-width: 100%;
      margin: 0 auto;
      background: var(--card);
      border-radius: 12px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
      overflow: hidden;
    }

    .header {
      background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
      color: white;
      padding: 16px 24px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    h1 {
      margin: 0;
      font-size: 1.4rem;
      font-weight: 600;
      letter-spacing: -0.025em;
    }

    .total {
      font-size: 0.95rem;
      opacity: 0.9;
    }

    .search-filter {
      padding: 16px 24px;
      background: var(--bg);
      border-bottom: 1px solid var(--border);
    }

    .search-wrapper {
      position: relative;
      max-width: 500px;
    }

    #search-input {
      width: 100%;
      padding: 10px 12px 10px 40px;
      border: 1px solid var(--border);
      border-radius: 8px;
      font-size: 0.95rem;
      transition: all 0.2s;
    }

    #search-input:focus {
      border-color: var(--accent);
      box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.15);
      outline: none;
    }

    .search-icon {
      position: absolute;
      left: 14px;
      top: 50%;
      transform: translateY(-50%);
      color: var(--text-light);
    }

    table {
      width: 100%;
      border-collapse: collapse;
      font-size: 0.9rem;
    }

    th, td {
      padding: 10px 12px;
      text-align: left;
      border-bottom: 1px solid var(--border);
    }

    th {
      background: var(--primary);
      color: white;
      font-weight: 600;
      position: sticky;
      top: 0;
      z-index: 10;
      cursor: pointer;
      user-select: none;
      transition: background 0.2s;
    }

    th:hover {
      background: var(--primary-dark);
    }

    th.asc::after,
    th.desc::after {
      font-family: "Font Awesome 6 Free";
      font-weight: 900;
      margin-left: 6px;
      opacity: 0.8;
    }

    th.asc::after { content: "\f0de"; }
    th.desc::after { content: "\f0dd"; }

    tr:hover {
      background: var(--hover);
    }

    .status {
      font-weight: 600;
      display: flex;
      align-items: center;
      gap: 6px;
    }

    .status-success { color: var(--success); }
    .status-failed { color: var(--danger); }
    .status-skipped { color: var(--warning); }

    .products {
      line-height: 1.3;
      max-width: 400px;
      white-space: pre-wrap;
    }

    .error-msg {
      color: var(--danger);
      max-width: 300px;
      word-break: break-word;
    }

    .action-btn {
      padding: 6px 12px;
      background: var(--primary);
      color: white;
      border: none;
      border-radius: 6px;
      cursor: pointer;
      font-size: 0.85rem;
      transition: all 0.2s;
    }

    .action-btn:hover {
      background: var(--primary-dark);
      transform: translateY(-1px);
    }

    .empty {
      text-align: center;
      padding: 80px 20px;
      color: var(--text-light);
      font-size: 1.1rem;
    }

    /* Responsive */
    @media (max-width: 992px) {
      table { min-width: 1000px; }
      .container { overflow-x: auto; }
    }

    @media (max-width: 768px) {
      .header { flex-direction: column; gap: 10px; text-align: center; padding: 12px; }
      th, td { padding: 8px; font-size: 0.85rem; }
      .search-wrapper { max-width: 100%; }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <h1>Order Sync Dashboard</h1>
      <div class="total">Total Orders: <%= totalOrders %></div>
    </div>

    <div class="search-filter">
      <div class="search-wrapper">
        <i class="fas fa-search search-icon"></i>
        <input type="text" id="search-input" placeholder="Filter by order #, store, timestamp, status, product, error..." />
      </div>
    </div>

    <% if (orders.length === 0) { %>
      <div class="empty">No orders found yet. New orders will appear here automatically.</div>
    <% } else { %>
      <table id="orders-table">
        <thead>
          <tr>
            <th data-sort="orderNumber">Order # <i class="fas fa-sort"></i></th>
            <th data-sort="storeName">Store Name <i class="fas fa-sort"></i></th>
            <th data-sort="timestamp">Timestamp (EST) <i class="fas fa-sort"></i></th>
            <th data-sort="status">Status <i class="fas fa-sort"></i></th>
            <th>Products (Title + SKU x Qty)</th>
            <th>Error Message</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody class="list">
          <% orders.forEach(o => { %>
            <tr>
              <td data-label="Order #" class="orderNumber"><%= o.name || o.orderNumber || o.shopifyOrderId || '-' %></td>
              <td data-label="Store Name" class="storeName"><%= o.storeName || o.shopDomain || 'Unknown' %></td>
              <td data-label="Timestamp" class="timestamp">
                <%= new Date(o.timestamp).toLocaleString('en-US', { 
                  timeZone: 'America/New_York',
                  month: 'numeric', day: 'numeric', year: 'numeric',
                  hour: 'numeric', minute: '2-digit', hour12: true 
                }) %>
              </td>
              <td data-label="Status" class="status <%= o.status %>">
                <i class="fas fa-<%= o.status === 'success' ? 'check-circle' : 'exclamation-circle' %>"></i>
                <%= o.status %>
              </td>
              <td data-label="Products" class="products">
                <% (o.products || []).forEach(p => { %>
                  <div><%= p.title %> (<%= p.sku %> Ã— <%= p.quantity %>)</div>
                <% }); %>
              </td>
              <td data-label="Error Message" class="error-msg"><%= o.errorMessage || '-' %></td>
              <td data-label="Action">
                <% if (o.status === 'failed' || o.status === 'skipped') { %>
                  <button class="action-btn" onclick="resync('<%= o.shopifyOrderId %>')">Re-sync</button>
                <% } %>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } %>
  </div>

  <script>
    // Enhanced List.js with full-text search on all columns
    const options = {
      valueNames: [
        'orderNumber',
        'storeName',
        'timestamp',
        'status',
        { name: 'products', attr: 'innerText' }, // search inside products column
        { name: 'error-msg', attr: 'innerText' } // search inside error column
      ],
      searchClass: 'search',
      sortClass: 'sort'
    };
    const userList = new List('orders-table', options);

    // Sorting with visual feedback
    document.querySelectorAll('th[data-sort]').forEach(th => {
      th.addEventListener('click', () => {
        const sortBy = th.getAttribute('data-sort');
        const current = th.classList.contains('asc') ? 'desc' : 'asc';
        document.querySelectorAll('th').forEach(t => t.classList.remove('asc', 'desc'));
        th.classList.add(current);
        userList.sort(sortBy, { order: current });
      });
    });

    async function resync(orderId) {
      if (!confirm(`Re-sync order #${orderId}?`)) return;
      try {
        const res = await fetch(`/resync/${orderId}`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          }
        });
        const text = await res.text();
        console.log('Re-sync response:', res.status, text);
        if (res.ok) {
          alert('Re-sync successful!');
          location.reload();
        } else {
          alert('Re-sync failed: ' + (text.length < 200 ? text : text.substring(0, 200) + '...'));
        }
      } catch (err) {
        alert('Network error during re-sync: ' + err.message);
      }
    }
  </script>
</body>
</html>