<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order Sync Dashboard</title>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/list.js/2.3.1/list.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: linear-gradient(to bottom, #f0f4f8, #d9e2ec);
      margin: 0;
      padding: 20px;
      color: #333;
    }
    .container {
      max-width: 1200px;
      margin: 0 auto;
      background: white;
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      padding: 20px;
    }
    h1 {
      color: #1a237e;
      margin-top: 0;
    }
    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }
    .search-filter {
      margin-bottom: 20px;
    }
    #search-input {
      width: 100%;
      padding: 12px;
      border: 1px solid #ccc;
      border-radius: 8px;
      font-size: 16px;
    }
    table {
      width: 100%;
      border-collapse: collapse;
    }
    th, td {
      padding: 12px;
      text-align: left;
      border-bottom: 1px solid #eee;
    }
    th {
      background: linear-gradient(to bottom, #3f51b5, #303f9f);
      color: white;
      position: sticky;
      top: 0;
      z-index: 1;
      cursor: pointer;
    }
    th:hover {
      background: linear-gradient(to bottom, #303f9f, #1a237e);
    }
    tr:hover {
      background: #f8f9fa;
    }
    .status {
      font-weight: bold;
    }
    .status-success { color: #2e7d32; }
    .status-failed { color: #c62828; }
    .status-skipped { color: #f57c00; }
    .products {
      font-size: 0.9em;
      line-height: 1.5;
    }
    button {
      padding: 6px 12px;
      background: #3f51b5;
      color: white;
      border: none;
      border-radius: 6px;
      cursor: pointer;
    }
    button:hover {
      background: #303f9f;
    }
    .empty {
      text-align: center;
      color: #757575;
      padding: 40px;
      font-size: 1.2em;
    }
    /* Responsive Design */
    @media (max-width: 768px) {
      table {
        border: 0;
      }
      thead {
        display: none;
      }
      tr {
        display: block;
        margin-bottom: 15px;
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 10px;
      }
      td {
        display: block;
        text-align: right;
        position: relative;
        padding-left: 50%;
      }
      td::before {
        content: attr(data-label);
        position: absolute;
        left: 0;
        width: 45%;
        padding-left: 10px;
        font-weight: bold;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <h1>Order Sync Dashboard</h1>
      <div>Total Orders: <%= totalOrders %></div>
    </div>

    <div class="search-filter">
      <input type="text" id="search-input" placeholder="Filter by order #, store, timestamp, status, product, error..." />
    </div>

    <% if (orders.length === 0) { %>
      <div class="empty">No orders found yet. New orders will appear here automatically.</div>
    <% } else { %>
      <table id="orders-table">
        <thead>
          <tr>
            <th data-sort="orderNumber">Order #</th>
            <th data-sort="storeName">Store Name</th>
            <th data-sort="timestamp">Timestamp (EST)</th>
            <th data-sort="status">Status</th>
            <th data-label="Products">Products (Title + SKU x Qty)</th>
            <th data-label="Error">Error Message</th>
            <th data-label="Action">Action</th>
          </tr>
        </thead>
        <tbody class="list">
          <% orders.forEach(o => { %>
            <tr>
              <td data-label="Order #" class="orderNumber"><%= o.orderNumber %></td>
              <td data-label="Store Name" class="storeName"><%= o.storeName %></td>
              <td data-label="Timestamp" class="timestamp"><%= new Date(o.timestamp).toLocaleString('en-US', { timeZone: 'America/New_York' }) %></td>
              <td data-label="Status" class="status <%= o.status %>">
                <i class="fas fa-<%= o.status === 'success' ? 'check-circle' : 'exclamation-circle' %>"></i> <%= o.status %>
              </td>
              <td data-label="Products" class="products">
                <% (o.products || []).forEach(p => { %>
                  <div><%= p.title %> (<%= p.sku %> x <%= p.quantity %>)</div>
                <% }); %>
              </td>
              <td data-label="Error" class="error-msg"><%= o.errorMessage || '-' %></td>
              <td data-label="Action">
                <% if (o.status === 'failed' || o.status === 'skipped') { %>
                  <button onclick="resync('<%= o.shopifyOrderId %>')">Re-sync</button>
                <% } %>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } %>
  </div>

  <script>
    // Initialize List.js for filtering & sorting
    const options = {
      valueNames: ['orderNumber', 'storeName', 'timestamp', 'status'],
      searchClass: 'search',
      sortClass: 'sort'
    };
    const userList = new List('orders-table', options);

    // Sorting with icons
    document.querySelectorAll('th[data-sort]').forEach(th => {
      th.innerHTML += ' <i class="fas fa-sort"></i>';
      th.addEventListener('click', () => {
        const sortBy = th.getAttribute('data-sort');
        const current = th.classList.contains('asc') ? 'desc' : 'asc';
        document.querySelectorAll('th').forEach(t => t.classList.remove('asc', 'desc'));
        th.classList.add(current);
        userList.sort(sortBy, { order: current });
      });
    });

    async function resync(orderId) {
      if (!confirm(`Re-sync order #${orderId}?`)) return;

      try {
        const res = await fetch(`/resync/${orderId}`, { method: 'POST' });
        if (res.ok) {
          alert('Re-sync successful!');
          location.reload();
        } else {
          alert('Re-sync failed: ' + await res.text());
        }
      } catch (err) {
        alert('Error: ' + err.message);
      }
    }
  </script>
</body>
</html>