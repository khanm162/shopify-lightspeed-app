<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order Sync Dashboard</title>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/list.js/2.3.1/list.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
  <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
  <style>
    body {
      font-family: 'Helvetica Neue', Arial, sans-serif;
      background: #f9f9f9;
      margin: 0;
      padding: 8px;
      color: #000;
      font-size: 12px;
    }
    .container {
      max-width: 1400px;
      margin: 0 auto;
      background: white;
      border-radius: 6px;
      box-shadow: 0 1px 6px rgba(0,0,0,0.1);
      overflow: hidden;
    }
    .header {
      background: #000;
      color: white;
      padding: 8px 12px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    h1 {
      margin: 0;
      font-size: 1.1rem;
      font-weight: 600;
    }
    .total {
      font-size: 0.9rem;
    }
    .filters {
      padding: 8px 12px;
      background: #f9f9f9;
      border-bottom: 1px solid #eee;
      display: flex;
      gap: 12px;
      flex-wrap: wrap;
      align-items: center;
    }
    .search-wrapper {
      position: relative;
      flex: 1;
      min-width: 250px;
    }
    #search-input {
      width: 100%;
      padding: 6px 6px 6px 30px;
      border: 1px solid #ddd;
      border-radius: 4px;
      font-size: 12px;
      box-sizing: border-box;
    }
    #search-input:focus {
      border-color: #000;
      outline: none;
    }
    .search-icon {
      position: absolute;
      left: 8px;
      top: 50%;
      transform: translateY(-50%);
      color: #777;
      font-size: 12px;
    }
    .date-range {
      display: flex;
      gap: 8px;
      align-items: center;
    }
    .date-input {
      padding: 6px;
      border: 1px solid #ddd;
      border-radius: 4px;
      font-size: 12px;
      width: 130px;
    }
    .clear-btn {
      padding: 6px 12px;
      background: #000;
      color: white;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      font-size: 12px;
    }
    .clear-btn:hover {
      background: #222;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      font-size: 11px;
    }
    th, td {
      padding: 3px 5px;
      text-align: left;
      border-bottom: 1px solid #eee;
      vertical-align: middle;
    }
    th {
      background: #000;
      color: white;
      font-weight: 600;
      cursor: pointer;
      position: sticky;
      top: 0;
      z-index: 1;
    }
    th:hover {
      background: #111;
    }
    tr:hover {
      background: #f5f5f5;
    }
    .status {
      font-weight: 600;
    }
    .status-success { color: #006400; }
    .status-failed { color: #8B0000; }
    .status-skipped { color: #8B4513; }
    .products {
      line-height: 1.1;
      white-space: pre-wrap;
      font-size: 11px;
    }
    .error-msg {
      color: #8B0000;
      max-width: 200px;
      word-break: break-word;
      font-size: 11px;
    }
    .action-btn {
      padding: 3px 6px;
      background: #000;
      color: white;
      border: none;
      border-radius: 3px;
      cursor: pointer;
      font-size: 10px;
    }
    .action-btn:hover {
      background: #222;
    }
    .empty {
      text-align: center;
      padding: 30px;
      color: #555;
    }
    @media (max-width: 992px) {
      table { min-width: 800px; }
      .filters { flex-direction: column; gap: 8px; }
    }
    @media (max-width: 768px) {
      th, td { font-size: 10px; padding: 3px 4px; }
      .date-range { flex-direction: column; }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <h1>Order Sync Dashboard</h1>
      <div class="total" id="total-display">Total Orders: <%= totalOrders %></div>
    </div>

    <div class="filters">
      <div class="search-wrapper">
        <i class="fas fa-search search-icon"></i>
        <input type="text" id="search-input" placeholder="Search order #, store, date, status, product, error..." />
      </div>
      <div class="date-range">
        <input type="text" id="from-date" placeholder="From (MM/DD/YYYY)" class="date-input" />
        <input type="text" id="to-date" placeholder="To (MM/DD/YYYY)" class="date-input" />
      </div>
      <button class="clear-btn" id="clear-filters">Clear Filters</button>
    </div>

    <% if (orders.length === 0) { %>
      <div class="empty">No orders found yet.</div>
    <% } else { %>
      <table id="orders-table">
        <thead>
          <tr>
            <th data-sort="orderNumber">Order # <i class="fas fa-sort"></i></th>
            <th data-sort="storeName">Store Name <i class="fas fa-sort"></i></th>
            <th data-sort="timestamp">Timestamp (EST) <i class="fas fa-sort"></i></th>
            <th data-sort="status">Status <i class="fas fa-sort"></i></th>
            <th>Products (Title + SKU × Qty)</th>
            <th>Error Message</th>
            <th>Action</th>
          </tr>
        </thead>
        <tbody class="list">
          <% orders.forEach(o => { %>
            <tr>
              <td class="orderNumber"><%= o.name || o.orderNumber || o.shopifyOrderId || '-' %></td>
              <td class="storeName"><%= o.storeName || o.shopDomain || 'Unknown' %></td>
              <td class="timestamp">
                <%= new Date(o.timestamp).toLocaleString('en-US', { 
                  timeZone: 'America/New_York',
                  month: 'numeric', day: 'numeric', year: 'numeric',
                  hour: 'numeric', minute: '2-digit', hour12: true 
                }) %>
              </td>
              <td class="status <%= o.status %>">
                <i class="fas fa-<%= o.status === 'success' ? 'check-circle' : 'exclamation-circle' %>"></i>
                <%= o.status %>
              </td>
              <td class="products">
                <% (o.products || []).forEach(p => { %>
                  <div><%= p.title %> (<%= p.sku %> × <%= p.quantity %>)</div>
                <% }); %>
              </td>
              <td class="error-msg"><%= o.errorMessage || '-' %></td>
              <td>
                <% if (o.status === 'failed' || o.status === 'skipped') { %>
                  <button class="action-btn" onclick="resync('<%= o.shopifyOrderId %>')">Re-sync</button>
                <% } %>
              </td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    <% } %>
  </div>

  <script>
  // List.js setup with date parsing
  const options = {
    valueNames: [
      'orderNumber',
      'storeName',
      {
        name: 'timestamp',
        sort: function(a, b) {
          // Custom date parser for correct sorting
          const dateA = new Date(a.innerText.trim());
          const dateB = new Date(b.innerText.trim());
          return dateA - dateB; // ascending by default
        }
      },
      'status',
      'products',
      'error-msg'
    ],
    searchClass: 'search',
    sortClass: 'sort'
  };

  const userList = new List('orders-table', options);

  // Default: newest orders on top (descending timestamp)
  userList.sort('timestamp', { order: 'desc' });

  // Update total count on every change
  const totalDisplay = document.getElementById('total-display');
  const originalTotal = <%= totalOrders %>;

  function updateTotal() {
    const visibleCount = userList.visibleItems.length;
    totalDisplay.textContent = `Total Orders: ${visibleCount} (of ${originalTotal})`;
  }

  userList.on('updated', updateTotal);
  userList.on('searchComplete', updateTotal);
  userList.on('sortComplete', updateTotal);

  updateTotal();

  // Live search
  document.getElementById('search-input').addEventListener('input', function() {
    userList.search(this.value);
  });

  // Date range filter (unchanged)
  flatpickr("#from-date", { dateFormat: "m/d/Y" });
  flatpickr("#to-date", { dateFormat: "m/d/Y" });

  const fromInput = document.getElementById('from-date');
  const toInput = document.getElementById('to-date');

  function applyDateFilter() {
    const fromStr = fromInput.value.trim();
    const toStr = toInput.value.trim();

    let from = fromStr ? new Date(fromStr) : null;
    let to = toStr ? new Date(toStr) : null;

    if (from) from.setHours(0, 0, 0, 0);
    if (to) to.setHours(23, 59, 59, 999);

    userList.filter(function(item) {
      const tsStr = item.values().timestamp;
      const ts = new Date(tsStr);
      if (from && ts < from) return false;
      if (to && ts > to) return false;
      return true;
    });
  }

  fromInput.addEventListener('change', applyDateFilter);
  toInput.addEventListener('change', applyDateFilter);

  // Clear Filters
  document.getElementById('clear-filters').addEventListener('click', function() {
    document.getElementById('search-input').value = '';
    userList.search('');

    fromInput.value = '';
    toInput.value = '';

    userList.filter(() => true);
    userList.sort('timestamp', { order: 'desc' }); // Reset to newest first
    updateTotal();
  });

  async function resync(orderId) {
    if (!confirm(`Re-sync order #${orderId}?`)) return;
    try {
      const res = await fetch(`/resync/${orderId}`, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' }
      });
      const text = await res.text();
      if (res.ok) {
        alert('Re-sync successful!');
        location.reload();
      } else {
        alert('Re-sync failed: ' + (text.length < 200 ? text : text.substring(0, 200) + '...'));
      }
    } catch (err) {
      alert('Network error: ' + err.message);
    }
  }
</script>
</body>
</html>