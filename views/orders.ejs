<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order Sync Dashboard</title>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/list.js/2.3.1/list.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background: #f9f9f9;
      margin: 0;
      padding: 15px;
      color: #1a1a1a;
      font-size: 13px;
      line-height: 1.3;
    }
    .container {
      max-width: 1400px;
      margin: 0 auto;
      background: white;
      border-radius: 8px;
      box-shadow: 0 2px 12px rgba(0,0,0,0.08);
      overflow: visible; /* Changed to visible for sticky header */
    }
    .header {
      background: #000;
      color: white;
      padding: 12px 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
      font-weight: 600;
    }
    h1 {
      margin: 0;
      font-size: 1.3rem;
    }
    .total {
      font-size: 0.95rem;
      opacity: 0.9;
    }
    .search-filter {
      padding: 12px 20px;
      background: #f8f9fa;
      border-bottom: 1px solid #eee;
    }
    .search-wrapper {
      position: relative;
      max-width: 500px;
    }
    #search-input {
      width: 100%;
      padding: 9px 12px 9px 36px;
      border: 1px solid #ddd;
      border-radius: 6px;
      font-size: 14px;
    }
    #search-input:focus {
      outline: none;
      border-color: #000;
      box-shadow: 0 0 0 2px rgba(0,0,0,0.1);
    }
    .search-icon {
      position: absolute;
      left: 12px;
      top: 50%;
      transform: translateY(-50%);
      color: #666;
    }
    .table-container {
      max-height: calc(100vh - 150px); /* Adjust based on header/search height */
      overflow-y: auto;
      position: relative;
    }
    table {
      width: 100%;
      border-collapse: collapse;
      font-size: 12.5px;
    }
    th {
      background: #000;
      color: white;
      padding: 10px 12px;
      text-align: left;
      font-weight: 600;
      cursor: pointer;
      user-select: none;
      position: sticky;
      top: 0;
      z-index: 10;
    }
    th:hover {
      background: #111;
    }
    td {
      padding: 8px 12px;
      border-bottom: 1px solid #eee;
      vertical-align: middle;
    }
    tr:hover {
      background: #f8f9fa;
    }
    .order-number { font-weight: 600; color: #1a1a1a; }
    .status {
      display: flex;
      align-items: center;
      gap: 6px;
      font-weight: 600;
    }
    .status-success { color: #16a34a; }
    .status-failed { color: #dc2626; }
    .status-skipped { color: #ea580c; }
    .products {
      line-height: 1.35;
      max-width: 380px;
    }
    .error-msg {
      color: #dc2626;
      max-width: 260px;
      word-break: break-word;
    }
    .resync-btn {
      background: #000;
      color: white;
      border: none;
      padding: 5px 10px;
      border-radius: 4px;
      cursor: pointer;
      font-size: 11px;
      font-weight: 500;
    }
    .resync-btn:hover {
      background: #333;
    }
    .empty {
      text-align: center;
      padding: 60px 20px;
      color: #666;
      font-size: 1.1rem;
    }
    /* Responsive */
    @media (max-width: 1100px) {
      table { font-size: 12px; }
      td, th { padding: 7px 10px; }
    }
    @media (max-width: 768px) {
      .header {
        flex-direction: column;
        text-align: center;
        gap: 8px;
      }
      table {
        display: block;
        overflow-x: auto;
        white-space: nowrap;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
      <h1>Order Sync Dashboard</h1>
      <div class="total">Total Orders: <%= totalOrders %></div>
    </div>

    <div class="search-filter">
      <div class="search-wrapper">
        <i class="fas fa-search search-icon"></i>
        <input type="text" id="search-input" placeholder="Filter by order #, store, timestamp, status, product, error..." />
      </div>
    </div>

    <% if (orders.length === 0) { %>
      <div class="empty">No orders found yet. New orders will appear here automatically.</div>
    <% } else { %>
      <div class="table-container">
        <table id="orders-table">
          <thead>
            <tr>
              <th data-sort="orderNumber">Order # <i class="fas fa-sort"></i></th>
              <th data-sort="storeName">Store Name <i class="fas fa-sort"></i></th>
              <th data-sort="timestamp">Timestamp (EST) <i class="fas fa-sort"></i></th>
              <th data-sort="status">Status <i class="fas fa-sort"></i></th>
              <th>Products (Title + SKU × Qty)</th>
              <th>Error Message</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody class="list">
            <% orders.forEach(o => { %>
              <tr>
                <td class="orderNumber"><%= o.name || o.orderNumber || o.shopifyOrderId || '-' %></td>
                <td class="storeName"><%= o.storeName || o.shopDomain || 'Unknown' %></td>
                <td class="timestamp">
                  <%= new Date(o.timestamp).toLocaleString('en-US', { 
                    timeZone: 'America/New_York',
                    month: 'numeric', day: 'numeric', year: 'numeric',
                    hour: 'numeric', minute: '2-digit', hour12: true 
                  }) %>
                </td>
                <td class="status <%= o.status %>">
                  <i class="fas fa-circle" style="color: <%= o.status === 'success' ? '#16a34a' : o.status === 'failed' ? '#dc2626' : '#ea580c' %>;"></i>
                  <%= o.status %>
                </td>
                <td class="products">
                  <% (o.products || []).forEach(p => { %>
                    <div><%= p.title %> (<%= p.sku %> × <%= p.quantity %>)</div>
                  <% }); %>
                </td>
                <td class="error-msg"><%= o.errorMessage || '-' %></td>
                <td>
                  <% if (o.status === 'failed' || o.status === 'skipped') { %>
                    <button class="resync-btn" onclick="resync('<%= o.shopifyOrderId %>')">Re-sync</button>
                  <% } %>
                </td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    <% } %>
  </div>

  <script>
    // Enhanced List.js with full-text search on all columns
    const userList = new List('orders-table', {
      valueNames: [
        'orderNumber',
        'storeName',
        'timestamp',
        'status',
        'products',
        'error-msg'
      ]
    });

    // Sorting with visual feedback
    document.querySelectorAll('th[data-sort]').forEach(th => {
      th.addEventListener('click', () => {
        const sortBy = th.getAttribute('data-sort');
        const current = th.classList.contains('asc') ? 'desc' : 'asc';
        document.querySelectorAll('th').forEach(t => t.classList.remove('asc', 'desc'));
        th.classList.add(current);
        userList.sort(sortBy, { order: current });
      });
    });

    async function resync(orderId) {
      if (!confirm(`Re-sync order #${orderId}?`)) return;
      try {
        const res = await fetch(`/resync/${orderId}`, { method: 'POST' });
        const text = await res.text();
        if (res.ok) {
          alert('Re-sync successful!');
          location.reload();
        } else {
          alert('Re-sync failed: ' + text.substring(0, 200));
        }
      } catch (err) {
        alert('Error: ' + err.message);
      }
    }
  </script>
</body>
</html>